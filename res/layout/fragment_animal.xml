<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/side_padding"
    android:paddingRight="@dimen/side_padding">

	<RelativeLayout
	    android:layout_width="match_parent"
	    android:layout_height="match_parent"
    	android:background="@drawable/card">
    	
	    
	    <ImageView
	        android:id="@+id/titleFlag"
	        android:layout_width="60dp"
	        android:layout_height="40dp"
	        android:layout_centerHorizontal="true"
	        android:src="@drawable/flag_en"
	        android:layout_above="@+id/title"/>
	    <TextView
	        android:id="@+id/title"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:paddingBottom="30dp"
	        android:paddingLeft="30dp"
	        android:paddingRight="30dp"
	        android:paddingTop="20dp"
	        android:textSize="30sp"
	        android:textColor="@android:color/black"
	        android:layout_above="@+id/imageView"
	        android:text="Kangaroo"
	        android:gravity="center"
	        android:layout_marginBottom="20dp"/>
	    
	    <ImageView 
	        android:id="@+id/imageView"
	        android:layout_width="200dp"
	        android:layout_height="200dp"
	        android:layout_centerInParent="true"
	        android:scaleType="fitCenter"/>
	    
	    <TextView
	        android:id="@+id/subTitle"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:paddingBottom="20dp"
	        android:paddingLeft="30dp"
	        android:paddingRight="30dp"
	        android:paddingTop="30dp"
	        android:textSize="30sp"
	        android:textColor="@android:color/black"
	        android:layout_below="@+id/imageView"
	        android:text="Kangaroo"
	        android:gravity="center"
	        android:layout_marginTop="20dp"/>
	    
	    <ImageView
	        android:id="@+id/subTitleFlag"
	        android:layout_width="60dp"
	        android:layout_height="40dp"
	        android:layout_centerHorizontal="true"
	        android:src="@drawable/flag_fr"
	        android:layout_below="@+id/subTitle"/>
	    
	</RelativeLayout>

</FrameLayout>